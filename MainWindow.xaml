<Window x:Class="КалькуляторДляЛитейщиков.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:КалькуляторДляЛитейщиков"
        mc:Ignorable="d"
        Title="Авторизация" Height="503" Width="425" ResizeMode="NoResize">
    <Grid Background="#FF595959">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="386" Width="404">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" >
                <Image Height="200" Width="337" Source="/МаякLogo.jpg" Stretch="Fill"/>
                <Label Content="Логин" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="White" FontFamily="Cascadia Code" FontSize="20"/>
                <TextBox x:Name="loginBox" TextWrapping="Wrap" Text="" Width="337" Height="30" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center"/>
                <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontFamily="Cascadia Code" FontSize="20"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="30">
                    <PasswordBox x:Name="passBox" Width="295" Height="30" FontSize="18" VerticalContentAlignment="Center"/>
                    <Button x:Name="hidePassBtn" Content="*" Margin="5,0,0,0" Height="30" Width="35" FontFamily="Cascadia Mono SemiBold" FontSize="18" Style="{StaticResource mainBtn}"/>
                </StackPanel>
                <Button x:Name="enterBtn" IsDefault="True" Content="Войти" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="35" Width="337" FontFamily="Cascadia Mono SemiBold" FontSize="18" Click="enterBtn_Click" Style="{StaticResource mainBtn}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
