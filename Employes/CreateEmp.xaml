<Window x:Class="КалькуляторДляЛитейщиков.CreateEmp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:КалькуляторДляЛитейщиков"
        mc:Ignorable="d"
        Title="Добавить сотрудника" Height="403" Width="493" Background="#FF595959">
    <Grid Cursor="ArrowCD">
        <Image HorizontalAlignment="Left"  Height="136" Margin="10,108,0,0" VerticalAlignment="Top" Width="151" Source="/МаякLogo.jpg" Stretch="Fill"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="166,10,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="166,46,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="166,82,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
        <TextBox x:Name="secondNameTxt" HorizontalAlignment="Left" Margin="276,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="207" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="nameTxt" HorizontalAlignment="Left" Margin="276,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="207" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="thirdNameTxt" HorizontalAlignment="Left" Margin="276,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="207" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Должность" HorizontalAlignment="Left" Margin="166,120,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
        <ComboBox x:Name="empPostBox" HorizontalAlignment="Left" Margin="276,122,0,0" VerticalAlignment="Top" Width="207" FontFamily="Cascadia Mono SemiBold" FontSize="18"/>
        <Button x:Name="addEmpBtn" Content="Добавить данные" HorizontalAlignment="Center" Margin="0,312,0,0" VerticalAlignment="Top" Height="65" Width="474" FontFamily="Cascadia Mono SemiBold" FontSize="18" Style="{StaticResource mainBtn}" Click="addEmpBtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="171,158,0,0" TextWrapping="Wrap" Text="Серия и номер паспорта" VerticalAlignment="Top" Width="100" FontFamily="Cascadia Mono SemiBold" FontSize="18"/>
        <TextBox x:Name="passportTxt" HorizontalAlignment="Left" Margin="276,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="207" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="61" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="208,231,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
        <TextBox x:Name="loginTxt" HorizontalAlignment="Left" Margin="276,233,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="207" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="198,269,0,0" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
        <TextBox x:Name="passTxt" HorizontalAlignment="Left" Margin="276,273,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="207" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
