<Window x:Class="КалькуляторДляЛитейщиков.Employes.editEmp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:КалькуляторДляЛитейщиков.Employes"
        mc:Ignorable="d"
        Title="Изменение сотрудника" Height="424" Width="563" Background="#FF595959" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" Height="409">
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <StackPanel Height="138">
                        <Image HorizontalAlignment="Left" Margin="5,0,5,0" Height="137" VerticalAlignment="Top" Width="151" Source="/МаякLogo.jpg" Stretch="Fill"/>
                    </StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="328">
                        <StackPanel Orientation="Vertical" Width="332">
                            <Label Content="Фамилия" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
                            <TextBox x:Name="secondNameTxt" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="300" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            <Label Content="Имя" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
                            <TextBox x:Name="nameTxt" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="299" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            <Label Content="Отчество" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
                            <TextBox x:Name="thirdTxt" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="300" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            <Label Content="Должность" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
                            <ComboBox x:Name="empPostBox" HorizontalAlignment="Left" Width="300" FontFamily="Cascadia Mono SemiBold" FontSize="18"/>
                            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Серия и номер паспорта" Width="236" FontFamily="Cascadia Mono SemiBold" FontSize="18"/>
                            <TextBox x:Name="passportTxt" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="300" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="61" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            <Label Content="Логин" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
                            <TextBox x:Name="loginTxt" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="300" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="27"/>
                            <TextBox x:Name="passTxt" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300" FontFamily="Cascadia Mono SemiBold" FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            <Label Content="Статус" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Cascadia Mono SemiBold" FontSize="18" Height="31"/>
                            <ComboBox x:Name="statusCombo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="35" FontFamily="Cascadia Mono SemiBold" FontSize="18"/>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
                <Button x:Name="editEmpBtn" Content="Изменить данные" HorizontalAlignment="Center" Height="55" Width="525" FontFamily="Cascadia Mono SemiBold" FontSize="18" Style="{StaticResource mainBtn}" Click="btnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
