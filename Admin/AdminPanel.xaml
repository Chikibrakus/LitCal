<Window x:Class="КалькуляторДляЛитейщиков.Admin.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:КалькуляторДляЛитейщиков.Admin"
        mc:Ignorable="d"
        Title="Панель администратора" Height="285" Width="800" Background="#FF595959" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Height="255">
                <Image Source="/Images/МаякLogo.jpg" Stretch="Fill" Height="192" Width="279"/>
                <StackPanel Orientation="Vertical">
                    <Label Margin="0,35,0,0" Content="Выберите функционал" HorizontalAlignment="Center" FontFamily="Cascadia Mono SemiBold" FontSize="36" Width="479" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Button x:Name="OrdersPanel" Margin="5,33,0,0" Content="Управление заявками" HorizontalAlignment="Left" Height="50" Width="474" FontFamily="Cascadia Mono SemiBold" FontSize="18" Style="{StaticResource mainBtn}" Click="OrdersPanel_Click"/>
                    <Button x:Name="EmployersPanel" Content="Упралвние сотрудниками" Height="50" Width="474" FontFamily="Cascadia Mono SemiBold" FontSize="18" Style="{StaticResource mainBtn}" Click="EmployersPanel_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
